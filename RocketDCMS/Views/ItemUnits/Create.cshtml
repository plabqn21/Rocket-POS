@model RamsoftBD.ModelView.POS.ItemUnitViewModel

@{
    ViewBag.Title = "Create";
}
<h2 class="bg" style="background-color:#293955;color:white">Item Units</h2>

<div class="row">


    <div class="col-lg-8">


        <table id="myTable" class="display">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ItemUnits)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-info btn-xs" })                       
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger btn-xs" })
                    </td>
                </tr>
                }
            </tbody>

        </table>



    </div>

    <div class="col-lg-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal" style="border-style:solid">
                <div>
                    <h2 class="bg" style="background-color:#293955;color:white;text-align:center"> New Unit</h2>
                </div>
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Unit Name", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-9" style="text-align:right">
                        <input type="submit" value="Create" class="btn btn-warning" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>






@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


    <script>
            $(document).ready(function () {
                $('#myTable').DataTable();
            });
    </script>
}
