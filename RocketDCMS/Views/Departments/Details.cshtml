@model RamsoftBD.Models.Department

@{
   ViewBag.Title = "Details"; 
}

<h2 class="bg" style="background-color:#293955;color:white;text-align:center">Department Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt class="alert-info" style="font-size:larger">
            @Html.DisplayName("Name")
        </dt>

        <dd class="alert-success" style="font-size:larger">
            @Html.DisplayFor(model => model.DepartmentName)
        </dd>

        <dt class="alert-info" style="font-size:larger">
            @Html.DisplayName("Code")
        </dt>

        <dd class="alert-success" style="font-size:larger">
            @Html.DisplayFor(model => model.DepartmentCode)
        </dd>

        <dt class="alert-info" style="font-size:larger">
            @Html.DisplayNameFor(model => model.Contact)
        </dt>

        <dd class="alert-success" style="font-size:larger">
            @Html.DisplayFor(model => model.Contact)
        </dd>

        <dt class="alert-info" style="font-size:larger">
            @Html.DisplayNameFor(model => model.Remarks)
        </dt>

        <dd class="alert-success" style="font-size:larger">
            @Html.DisplayFor(model => model.Remarks)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-info btn-xs" })
