@model RamsoftBD.Models.Doctor

@{
   ViewBag.Title = "Details"; 
}

<h2 class="bg" style="background-color:#293955;color:white;text-align:center">Doctor Details</h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt class="alert-info" style="font-size:larger">
            @Html.DisplayName("Branch")
        </dt>

        <dd class="alert-success" style="font-size:larger">
            @ViewBag.BranchName
        </dd>

        <dt class="alert-info" style="font-size:larger">
            @Html.DisplayName("Name")
        </dt>

        <dd class="alert-success" style="font-size:larger">
            @Html.DisplayFor(model => model.DoctorName)
        </dd>

        <dt class="alert-info" style="font-size:larger">
            @Html.DisplayName("Code")
        </dt>

        <dd class="alert-success" style="font-size:larger">
            @Html.DisplayFor(model => model.DoctorCode)
        </dd>

        <dt class="alert-info" style="font-size:larger">
            @Html.DisplayNameFor(model => model.Qualification)
        </dt>

        <dd class="alert-success" style="font-size:larger">
            @Html.DisplayFor(model => model.Qualification)
        </dd>

        <dt class="alert-info" style="font-size:larger">
            @Html.DisplayNameFor(model => model.Hospital)
        </dt>

        <dd class="alert-success" style="font-size:larger">
            @Html.DisplayFor(model => model.Hospital)
        </dd>

        <dt class="alert-info" style="font-size:larger">
            @Html.DisplayNameFor(model => model.Type)
        </dt>

        <dd class="alert-success" style="font-size:larger">
            @Html.DisplayFor(model => model.Type)
        </dd>

        <dt class="alert-info" style="font-size:larger">
            @Html.DisplayNameFor(model => model.Remarks)
        </dt>

        <dd class="alert-success" style="font-size:larger">
            @Html.DisplayFor(model => model.Remarks)
        </dd>

        <dt class="alert-info" style="font-size:larger">
            @Html.DisplayName("Commission Rate")
        </dt>

        <dd class="alert-success" style="font-size:larger">
            @Html.DisplayFor(model => model.CommissionRate)
            @Html.DisplayName("%");
        </dd>

        <dt class="alert-info" style="font-size:larger">
            @Html.DisplayName("New Patient Fee")
        </dt>

        <dd class="alert-success" style="font-size:larger">
            @Html.DisplayFor(model => model.NewPatientFee)
        </dd>

        <dt class="alert-info" style="font-size:larger">
            @Html.DisplayName("Old Patient Fee")
        </dt>

        <dd class="alert-success" style="font-size:larger">
            @Html.DisplayFor(model => model.OldPatientFee)
        </dd>

        <dt class="alert-info" style="font-size:larger">
            @Html.DisplayName("Old Patient Fee Duration")
        </dt>

        <dd class="alert-success" style="font-size:larger">
            @Html.DisplayFor(model => model.OldPatientFeeDuration)
            @Html.DisplayName("Month");
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-info btn-xs" })
    @Html.ActionLink("Back to List", "Create", null, new { @class = "btn btn-primary btn-xs" })
</p>
