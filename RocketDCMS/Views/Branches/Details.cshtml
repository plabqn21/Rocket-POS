@model RamsoftBD.Models.Branch

@{
   ViewBag.Title = "Details"; 
  


}

<h2 class="bg" style="background-color:#293955;color:white;text-align:center">Branch Details</h2>

<div >
   
    <hr />
    <dl class="dl-horizontal">
        <dt class="alert-info" style="font-size:larger">
            @Html.DisplayName("Name")
        </dt>

        <dd class="alert-success" style="font-size:larger">
            @Html.DisplayFor(model => model.BranchName)
        </dd>
        <dt class="alert-info" style="font-size:larger">
            @Html.DisplayName("Code")
        </dt>

        <dd class="alert-success" style="font-size:larger">
            @Html.DisplayFor(model => model.BranchCode)
        </dd>



        <dt class="alert-info" style="font-size:larger">
            @Html.DisplayName("Opening Date")
        </dt>

        <dd class="alert-success" style="font-size:larger">
            @Html.DisplayFor(model => model.OpeningDate)
        </dd>

        <dt class="alert-info" style="font-size:larger">
            @Html.DisplayName("Address")
        </dt>

        <dd class="alert-success" style="font-size:larger">
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt class="alert-info" style="font-size:larger">
            @Html.DisplayName("Close Date")
        </dt>

        <dd class="alert-success" style="font-size:larger">
            @Html.DisplayFor(model => model.CloseDate)
        </dd>

        <dt class="alert-info" style="font-size:larger">
            @Html.DisplayName("Status")
        </dt>

        <dd class="alert-success" style="font-size:larger">
            @Html.DisplayFor(model => model.BranchStatus)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-info btn-xs" }) 
    @Html.ActionLink("Back to List", "Create", null, new { @class = "btn btn-primary btn-xs" })
</p>
